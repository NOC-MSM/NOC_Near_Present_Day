<!-- XIOS3 -->
  <context id="xios" >
    <variable_definition>
      <variable_group id="buffer">
        <!--
        <variable id="min_buffer_size" type="int">6000000</variable>
        <variable id="optimal_buffer_size" type="string">performance</variable>
        -->
        <variable id="min_buffer_size" type="int">6000000</variable>
        <variable id="optimal_buffer_size" type="string">performance</variable>
      </variable_group>

      <variable_group id="parameters" >
        <variable id="using_server" type="bool">true</variable>
        <variable id="info_level" type="int">1</variable>
        <variable id="print_file" type="bool">false</variable>
        <variable id="using_server2" type="bool">false</variable>
        <variable id="transport_protocol" type="string" >p2p</variable>
        <variable id="using_oasis"      type="bool">false</variable>
        <variable id="services_use_window_manager" type="bool">false</variable>
      </variable_group>
    </variable_definition>
    <pool_definition>
     <pool name="super_mgr" nprocs="1"/> <!-- nproc_no_med_before="288" --> <!-- nproc_no_med="304" --> 
